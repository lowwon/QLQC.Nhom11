@model Nhom11.QLQC.Pages.NhanVienModel
@{
}
<form method="post">
<div class="row">
    <div class="col-2 form-group">
        <label>Mã nhân viên : </label>
        <input type="text" id="mnv" name="mnv" class="form-control" />
    </div>
    <div class="col-2 form-group">
        <label>      Mã nhóm :    </label>
        <select  id="mn" name="mn" class="form-control">
            <option value =""></option>
            <option value ="2014">Trước năm 2014</option>            
            <option value ="2016">2015 - 2016</option> 
            <option value ="2018">2017 - 2018</option> 
            <option value ="2020">2019 - 2020</option> 
            <option value ="2021">Từ năm 2021</option>
        </select>
    </div>
    <div class="col-3 form-group">
        <label>Tên nhân viên : </label>
        <input type="text"  id="tnv" name="tnv" class="form-control" />
    </div>
    <div class="col-2 form-group">
        <label>Năm sinh: </label>
        <select  id="ns" name="ns" class="form-control">
            <option value =""></option>
            <option value ="1980">Trước năm 1980</option>            
            <option value ="1985">1981 - 1985</option> 
            <option value ="1990">1986 - 1990</option> 
            <option value ="1995">1991 - 1995</option> 
            <option value ="1996">Từ năm 1996</option>
        </select>
    </div>
    <div class="col-3 form-group">
        <label>Email : </label>
        <input type="text"  id="emailnv" name="emailnv" class="form-control" />
    </div>      
    <div class="col-2 form-group">
        <label>      Năm vào làm:     </label>
        <select  id="nvl" name="nvl" class="form-control">
            <option value =""></option>
            <option value ="2014">Trước năm 2014</option>            
            <option value ="2016">2015 - 2016</option> 
            <option value ="2018">2017 - 2018</option> 
            <option value ="2020">2019 - 2020</option> 
            <option value ="2021">Từ năm 2021</option>
        </select>
    </div>
    <div class="col-4 form-group">
        <label>Theo năm sinh</label>
        <select  id="sx1" name="sx1" class="form-control">
            <option value =""> </option>            
            <option value ="tangdan">Tăng dần ↑ </option>
            <option value ="giamdan">Giảm dần ↓ </option>
        </select>
    </div>
    <div class="col-4 form-group">
        <label>Theo năm làm việc</label>
        <select  id="sx2" name="sx2" class="form-control">
            <option value =""> </option>            
            <option value ="tangdan">Tăng dần ↑ </option>
            <option value ="giamdan">Giảm dần ↓ </option>
        </select>
    </div>
    <div class="col-2 form-group">
            <br />
            <input style="margin-top: 5px; margin-left: 70px" type="submit" class="btn btn-primary" value="Tìm kiếm"/>
    </div>
</div>
</form>
<br />
<div class="text-center">
<h2><b>Danh sách nhân viên</b></h2>
</div>
    
@if (Request.Method.ToUpper() == "GET")
{
<table class="table table-success table-condensed">
    <tr>
        <th>Mã nhân viên</th>
        <th>Tên nhân viên</th>
        <th>Email</th>
        <th>Năm sinh</th>
        <th>Năm vào làm</th>
        <th>Mã nhóm</th>
        <th>Tác vụ</th>
    </tr>
    <tr>
        <td>a</td>
        <td>b</td>
        <td>c</td>
        <td>d</td>
        <td>e</td>
        <td>f</td>
    </tr>
</table>
}
else if(Request.Method.ToUpper() == "POST") {
    <table class="table table-success table-condensed">
    <tr>
        <th>Mã nhân viên</th>
        <th>Tên nhân viên</th>
        <th>Email</th>
        <th>Năm sinh</th>
        <th>Năm vào làm</th>
        <th>Mã nhóm</th>
        <th>Tác vụ</th>
    </tr>        
</table>
}

