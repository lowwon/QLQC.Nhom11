@page
@using global::QLQC.DTO
@using System.Text.Json;
@model Nhom11.QLQC.Pages.NhanVien_HopDong_DoiTacModel
@{
}
@Html.AntiForgeryToken()
@using Microsoft.AspNetCore.Antiforgery
@inject IAntiforgery antiforgery
@{
    var token = antiforgery.GetAndStoreTokens(HttpContext).RequestToken;
}

<form method="post">
    <div class="row">
        <div class="col-3 form-group">
            <label>      Mã Khách Hàng :    </label>
            <input type="text" id="mkhnv" name="mkhnv" class="form-control" />
        </div>
        <div class="col-3 form-group">
            <label>Tên Khách Hàng : </label>
            <input type="text" id="tkhnv" name="tkhnv" class="form-control" />
        </div>
        <div style="margin-block: auto; margin-left: auto;" class="col-2 form-group">
            <br />
            <input type="submit" class="btn btn-primary" value="Tìm kiếm" />
        </div>
    </div>
</form>
<br />
<div class="text-center">
    <h2 style="display: inline-block"><b>Nhân viên theo nhóm Nhân viên</b></h2>
</div>

@if (Request.Method.ToUpper() == "GET")
{
    <table class="table table-success table-condensed">
        <tr style="text-align:center;">
            <th>Mã nhân viên</th>
            <th>Tên nhân viên</th>
            <th>Ngày sinh</th>
            <th>Ngày vào làm</th>
            <th>Email</th>
            <th>Giới tính</th>
        </tr>

    </table>
}
else if (Request.Method.ToUpper() == "POST")
{
    <table class="table table-success table-condensed">
        <tr>
            <th>Mã nhân viên</th>
            <th>Tên nhân viên</th>
            <th>Ngày sinh</th>
            <th>Ngày vào làm</th>
            <th>Email</th>
            <th>Giới tính</th>
        </tr>
        @foreach (NhanVienDTO nv in Model.lst)
        {
            <tr>
                <td>@nv.MaNv</td>
                <td>@nv.TenNv</td>
                <td>@nv.NgSinh</td>
                <td>@nv.NgVaoLam</td>
                <td>@nv.Email</td>
                <td>@nv.Gt</td>
            </tr>
        }
    </table>
}
